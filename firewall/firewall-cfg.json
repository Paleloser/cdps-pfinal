{
  "image": "images:ubuntu/18.04",
  "name": "firewall",
  "dependencies": [
    "lynx",
    "net-tools",
    "tcpdump",
    "traceroute",
    "nmap",
    "fwbuilder",
    "iptables"
  ],
  "interfaces": [
    {
      "name": "eth0",
      "network": "default"
    },
    {
      "name": "eth1",
      "network": "intra-lan0",
      "address": "10.1.0.1/16"
    }
  ],
  "scripts": [
    "lxc file push firewall/firewall.fwb firewall1/",
    "lxc exec firewall1 -- bash -c \"fwb_ipt -v -f /firewall.fwb -d / -o fw.fw -i id2327X32499\"",
    "lxc exec firewall1 -- bash -c \"/fw.fw\""
  ],
  "forwarding": true,
  "replication": 0
}